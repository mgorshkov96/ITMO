<Window x:Class="ITMO.CsharpWPF.Lab03.Exercise02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITMO.CsharpWPF.Lab03.Exercise02"
        mc:Ignorable="d"
        Title="MainWindow" Height="152" Width="529">
    <Grid>
        <TextBox x:Name="txtBox" HorizontalAlignment="Left" Margin="49,61,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

        <StackPanel ButtonBase.Click="StackPanel_Click" HorizontalAlignment="Left" Margin="350,40,0,0" VerticalAlignment="Top"  Width="100">
            <Button x:Name="butAdd" Content="x+x"/>
            <Button x:Name="butMult" Content="x*x"/>
            <Button x:Name="butSqrt" Content="sqrt(x)"/>
        </StackPanel>

    </Grid>
</Window>
